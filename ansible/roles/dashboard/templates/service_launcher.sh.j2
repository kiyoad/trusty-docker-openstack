#!/bin/bash
set -eux
# ---------------------------------------------------------------------------
# modify config file
# ---------------------------------------------------------------------------
sed -i -e "s/^\(OPENSTACK_HOST\) *= *\"127\.0\.0\.1\"/\1 = \"${KEYSTONE_IP}\"/" /etc/openstack-dashboard/local_settings.py
# ---------------------------------------------------------------------------
# start service
# ---------------------------------------------------------------------------
monit -I -c /etc/monit/monitrc
