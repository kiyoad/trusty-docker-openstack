check process nova-api with pidfile /var/run/nova-api.pid
  start program = "/sbin/start-stop-daemon --start --quiet --background --pidfile /var/run/nova-api.pid --chuid nova --chdir /var/run --name nova-api --exec /usr/bin/nova-api -- --config-file=/etc/nova/nova.conf"
  stop program  = "/sbin/start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --pidfile /var/run/nova-api.pid --name nova-api"
